<?xml version="1.0" encoding="UTF-8"?>
	
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

	
<VBox fx:id="vb" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gr.aueb.cf.controllers.MainWindowFXController" >
	<children>
		<HBox fx:id="hb" alignment="CENTER" >
			<children>
				<Label fx:id="titleLbl" text="Quality in Education" />		
			</children>
			<padding>
	      		<Insets bottom="0" left="0" right="0" top="20" />
	   		</padding>
		</HBox>
		
		<GridPane fx:id="gp" hgap="10" vgap="15" >
			<children>
				<Button fx:id="teachersBtn"  prefHeight="50" prefWidth="50" GridPane.rowIndex="0" GridPane.columnIndex="0" 
																												onAction="#openTeachersMenu"/>
				<Button fx:id="versionBtn"   prefHeight="50" prefWidth="50" GridPane.rowIndex="1" GridPane.columnIndex="0" 
																												onAction="#openVersionForm"/>
				<Label  fx:id="teachersLbl" text="Teachers"  GridPane.rowIndex="0" GridPane.columnIndex="1" />
				<Label  fx:id="versionLbl"  text="Version"   GridPane.rowIndex="1" GridPane.columnIndex="1" />
			</children>
			<padding>
	      		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	   		</padding>
		</GridPane>
	</children>
</VBox>